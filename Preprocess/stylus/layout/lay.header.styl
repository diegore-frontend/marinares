.ap
	// Header
	&-header
		&-logo-nav
			padding: 1em

	
	// Logo
	&-brand
		display: block
		max-width: 4.8em
		float: left
		
		&-link
			display: inline-block
					
			img
				width: 100%
		
		.ap-txt
			font-size: 0
			height: 0
			display: block
	
	&-nav-icon
		float: right
		margin: 0
	
	// Navigation
	&-nav
		display: none
		left: -100%
		position: absolute
		
		&--is-visible
			display: block
			left: 0
			
			.ap-nav-item
				animation: .6s fadeInRight both
				
				&:nth-child(2)
					animation-delay: .2s
				
				&:nth-child(3)
					animation-delay: .4s
				
				&:nth-child(4)
					animation-delay: .6s
				
				&:nth-child(5)
					animation-delay: .8s


	
