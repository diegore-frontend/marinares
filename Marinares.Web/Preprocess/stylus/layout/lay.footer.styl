.ap
	&-ft
		position: absolute
		z-index: 14
		bottom: 0
		width: 100%
		
		+above(760px)
			padding: 1em 
		
		+above(1000px)
			z-index: 18
		
		&:before
			background: linear-gradient(top, rgba(0, 0, 0, 0), rgba(0, 0, 0, .8))
			content: ''
			position: absolute
			width: 100%
			height: 10em
			bottom: 0	
			z-index: -1	
			left: 0
		
		&-brand
			width: 100%
			margin: auto
			display: block
			transition: .30s linear
			
			+above(760px)
				font-size: .8em
			
			img
				max-width: 10em
				width: 100%
				margin: auto
				display: block
			
				+above(390px)
					max-width: 14em
		
		p.f-right
			color: #FFF
			display: block
			text-align: center
			padding: .8em
			width: 100%
			
		.ap-link
			color: #FFF
		
		&-wrap
			+above(1000px)
				max-width: 1040px
				margin: auto
				
