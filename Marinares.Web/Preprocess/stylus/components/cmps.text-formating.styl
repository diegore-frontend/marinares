// Titles
h1
	font-size: 1.8em

h2
	font-size: 1.7em

h3
	font-size: 1.4em

h4
	font-size: 1.2em

.ap
	// Titles
	&-tt
		color: $base
		font-weight: bolder
		
			// subtitle
		&-cursibe
			font-family: 'Great Vibes', cursive;
			
			
		&--modal
			font-size: 4em
	
	&-txt
		color: $base
		font-size: 1.2em
		
		&--win
			strong
				display: block
	
		&-link
			color: $base
			text-decoration: underline
		
		&--small
			font-size: 90%
			font-weight: 300
		
		&-geo
			font-family: 'Georgia', serif
		
		&--cursive
			font-family: 'Great Vibes', cursive;
			font-size: 2.4em;
			text-align: left
			margin-bottom: .6em
		
		&--info
			font-size: 1.2em;
			width: 80%;
			text-align: left;
			font-style: italic;
		
		&--time
			color: $red
			font-size: 1.6em
			position: relative
			
			&:before
				content: '-';
				position: absolute;
				top: -0.6em;
				left: -0.3em;





			
