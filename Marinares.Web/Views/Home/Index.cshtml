                        <picture>
                            <source srcset=@Url.Content("~/Content/img/img-dress-code.jpg") media="(min-width: 700px)">
                            <img srcset=@Url.Content("~/Content/img/img-dress-code-mov.jpg") alt="Nominado a" class="ap-nom-img">
                        </picture>
                    </a>
                </div>
            </div>
        </div>

        <div class="cf">
            <div class="ap-gm-small col4">
                <div class="ap-gm-item ap-gm--hotel">
                    <a href="@Url.Content("~/donde-hospedarse")" class="ap-gm-link">
                        <div class="ap-gm--tt">
                            <div class="ap-table">
                                <div class="ap-cell">
                                    <h4 class="ap-tt-gm">
                                        Hospedaje
                                        <small class="ap-tt-gm-tp">¿Dónde me puedo hospedar?</small>
